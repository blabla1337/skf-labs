            <div class="panel-body">
                <div class="col-md-6">
                <h3>Update user Details</h3>
                <%= form_with model: @user,  :url => {:action => :update}, method: :patch do |form| %>
                    <input type="hidden" name="_method" value="patch" />
                    <%= form.text_field :username, class: "form-control", value: @user.username %>
                    <%= form.text_field :title, class: "form-control", value: @user.title %>
                    <br/>
                <%= form.submit class:"btn btn-success"%>
                <%= link_to 'Go back', root_path, class: "btn btn-primary"%>

